#content,
#colophon {
    margin: 0 3.3%;
    }
#colophon {
	a {
		display:block;
		float:right;
		color:#fff;
		text-decoration:none;
	}
	a:hover {
		color:pink;
	}
}
.top {
		display:inline-block;
		float:right;
		color:#fff;
		padding-left:75%;
		text-decoration:none;
	}
#nav {
	padding: .65em 0;
	h3 {
		float: left;
		text-transform: capitalize;
	}
	ul {
		list-style: none;
		padding:0;
		border-bottom: 1px solid #eee;
		margin: .65em 0 .39em;
	}
	li {
		border-top: 1px solid #eee;
	}
	a {
		display:block;
		font-size: 1.063em;
		color: #333;
		text-decoration: none;
		padding: 0.975em 1.3em;
	}
	a:hover {
		background: #f8f8f8;
	}
	nav {
		height:0;
		overflow: hidden;
	}
	input[type=checkbox] {
		position: absolute;
		top: -999em;
	}
	label {
		display:block;
		padding: .2em 0.2em;
		background: url('<%= Photo.where(name:"bonemenu")[0].image_url %>') no-repeat right center;
		text-indent: -999em;
    cursor: pointer;
    -webkit-user-select: none;  /* Chrome all / Safari all */
    -moz-user-select: none;     /* Firefox all */
    -ms-user-select: none;      /* IE 10+ */
    user-select: none;
	}
	input[type=checkbox]:checked ~ nav {
		height: auto;
		overflow: hidden;
	}
}

